%form#ad.form-horizontal{:action => "/show/#{@job._id}", :enctype => "multipart/form-data", :method => "post"}
  %h2 Update this Job
  %fieldset
    %input#input.span6{:name => "_method", :value => "put", :type => "hidden"}/
    .control-group
      %label.control-label Title/Role
      .controls
        %input#input.span6{:name => "job[title]", :value => "#{@job.title}", :type => "text"}/
    .control-group
      %label.control-label Company Name
      .controls
        %input#input.span6{:name => "job[company]", :value => "#{@job.company}", :type => "text"}/
    .control-group
      %label.control-label Website
      .controls
        %input#url.span6{:name => "job[website]", :value => "#{@job.website}", :type => "text"}/
    .control-group
      %label.control-label Job Description
      .controls
        %textarea#input.input-block-level{:name => "job[description]", :value => "#{@job.description}", :rows => "6"}
    .control-group
      %label.control-label Contact Email
      .controls
        %input#url.span6{:name => "job[contact_email]", :value => "#{@job.contact_email}", :type => "text"}/
    .control-group
      .controls
        %button.btn.btn-large{:type => "submit"} Update 